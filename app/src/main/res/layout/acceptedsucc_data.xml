<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/header"/>

    <TextView
        android:id="@+id/customerNameAndAddsAndOffers"
        android:layout_width="398dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:fontFamily="sans-serif-black"
        android:padding="10dp"
        android:text=" "
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/deliveredcheck"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_below="@+id/customerNameAndAddsAndOffers"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:textColor="#0000FF"
        android:text="When you deliver the order, check the delivered checkbox"
        android:textSize="15sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/deliveredcheck"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/itemListTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="#000000"
            android:gravity="start"/>

    </ScrollView>


    <Button
        android:id="@+id/deliverButton"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemListTextView"
        android:text="Deliver"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#00F03B"
        tools:ignore="NotSibling" />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemListTextView"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="230dp"
        android:checked="false"
        tools:ignore="NotSibling" />
    <Button
        android:id="@+id/homeBtn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home > "
        android:layout_marginTop="550dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="sans-serif-black"
        android:backgroundTint="#05D2ED"
        app:strokeWidth="3dp"
        android:padding="20dp"/>
</RelativeLayout>
