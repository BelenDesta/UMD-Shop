<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/header"/>

    <TextView
        android:id="@+id/browseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Browse all available shops"
        android:layout_below="@id/header_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textSize="25dp"
        android:fontFamily="sans-serif-black"/>

    <Spinner
        android:id="@+id/shopSpinner"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/browseText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="#A0EBF4"
        android:padding="5dp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/continueBtn1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shopSpinner"
        android:text="Continue"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_alignRight="@+id/header_title"
        android:layout_marginTop="200dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#FFEB3B"/>

</RelativeLayout>