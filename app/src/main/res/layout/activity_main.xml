<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include layout="@layout/header"/>

    <TextView
        android:id="@+id/welcometext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to TerpShop On-the-Go!"
        android:layout_below="@id/header_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textSize="25dp"
        android:textStyle="italic"
        android:fontFamily="sans-serif-black"/>

    <Button
        android:id="@+id/customerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop as a Customer > "
        android:layout_below="@+id/welcometext"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"

        android:transitionName="CustomerTransition"

        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="sans-serif-black"
        android:backgroundTint="#05D2ED"
        app:strokeWidth="3dp"
        android:padding="20dp"/>

    <Button
        android:id="@+id/shopperBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Become a Shopper > "
        android:layout_below="@+id/customerBtn"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"

        android:transitionName="ShoperTranstion"

        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="sans-serif-black"
        android:backgroundTint="#05D2ED"
        app:strokeWidth="3dp"
        android:padding="20dp"/>

    <Button
        android:id="@+id/orderStatBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Order Status > "
        android:layout_below="@+id/shopperBtn"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"

        android:transitionName="OrderCheckTranstion"

        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="sans-serif-black"
        android:backgroundTint="#05D2ED"
        app:strokeWidth="3dp"
        android:padding="20dp"/>

    <Button
        android:id="@+id/rateUsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orderStatBtn"
        android:text="Rate Us"
        android:transitionName="rateUsTransitionName"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#5ED5D1D1"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/aboutUsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orderStatBtn"
        android:text="About Us"
        android:transitionName="aboutUsTransitionName"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_alignRight="@+id/header_title"
        android:layout_marginTop="65dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#5ED5D1D1"
        app:strokeWidth="2dp" />

</RelativeLayout>
